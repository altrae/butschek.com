{
  "compilerOptions": {
    "allowJs": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "noEmit": true,
    "noFallthroughCasesInSwitch": false,
    "paths": { "@/*": ["./src/*"] },
    "plugins": [{ "name": "next" }],
    "resolveJsonModule": true
  },
  "exclude": ["node_modules"],
  "extends": "../../tsconfig.json",
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"]
}
